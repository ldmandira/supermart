<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ofmenu"
    android:background="@drawable/nback2">

    <TextView
        android:id="@+id/materialAutoCompleteTextView3"
        android:layout_width="93dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:text="MENU"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.023"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/loyalbt"
        android:layout_width="230dp"
        android:layout_height="78dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/custom_button"
        android:drawableRight="@drawable/ic_action_card"
        android:text="Loyalty card Details"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/moredbt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/locatbt"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/editebt"
        android:layout_width="230dp"
        android:layout_height="78dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_button"
        android:drawableRight="@drawable/ic_action_editp"
        android:text="Edit profile"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/moredbt"
        app:layout_constraintVertical_bias="0.011" />

    <Button
        android:id="@+id/contact"
        android:layout_width="230dp"
        android:layout_height="78dp"
        android:layout_marginTop="104dp"
        android:background="@drawable/custom_button"
        android:drawableRight="@drawable/call"
        android:text="CONTACT US"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/moredbt"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/moredbt"
        android:layout_width="230dp"
        android:layout_height="78dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/custom_button"
        android:drawableRight="@drawable/ic_action_de"

        android:text="More  Details"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loyalbt" />

    <Button
        android:id="@+id/locatbt"
        android:layout_width="230dp"
        android:layout_height="78dp"
        android:layout_marginTop="204dp"
        android:background="@drawable/custom_button"
        android:drawableRight="@drawable/ic_action_locat"
        android:text="Find Location"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/calbt"
        android:layout_width="230dp"
        android:layout_height="78dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/custom_button"
        android:drawableRight="@drawable/ic_action_cal"
        android:text="Calculator"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/locatbt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.887" />

</androidx.constraintlayout.widget.ConstraintLayout>